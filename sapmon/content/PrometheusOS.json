{
        "contentType": "Prometheus",
        "checks": [
                {
                        "name": "PrometheusOSExporter_1min",
                        "description": "Export system data from the prometheus node_exporter every min",
                        "customLog": "Prometheus_OSExporter",
                        "frequencySecs": 60,
                        "actions": [
                            {
                                "type": "FetchMetrics",
                                "parameters": {
                                    "includePrefixes": "^(node_forks)|(node_cpu_seconds)|(node_vmstat_pgpg)|(node_vmstat_pswp)|(node_procs)|(node_memory_MemFree_bytes)|(node_memory_Buffers_bytes)|(node_disk_io_now)|(node_disk_io_time_seconds)|(node_disk_read_bytes)|(node_disk_reads_completed)|(node_disk_writes_completed)|(node_disk_written_bytes)|(node_memory_MemTotal_bytes)|(node_memory_MemAvailable_bytes)|(node_memory_SwapCached_bytes)|(node_memory_Cached_bytes)|(node_disk_read_time_seconds)|(node_disk_write_time_seconds)|(node_network_transmit_packets)|(node_network_receive_packets)|(node_network_receive_bytes)|(node_network_transmit_bytes)|(node_memory_SwapFree_bytes)|(node_memory_SwapTotal_byte)",
                                    "suppressIfZeroPrefixes": "node_(?:systemd_unit_state)"
                                }
                            }
                        ]
                },
                {
                        "name": "PrometheusOSExporter_15min",
                        "description": "Export system data from the prometheus node_exporter every 15 mins",
                        "customLog": "Prometheus_OSExporter",
                        "frequencySecs": 900,
                        "actions": [
                            {
                                "type": "FetchMetrics",
                                "parameters": {
                                    "includePrefixes": "^(node_filesystem_free_bytes)|(node_time_seconds)|(node_boot_time_seconds)|(node_filesystem_size_bytes)|(node_filesystem_avail_bytes)",
                                    "suppressIfZeroPrefixes": "node_(?:systemd_unit_state)"
                                }
                            }
                        ]
                },
                {
                        "name": "PrometheusOSExporter_24h",
                        "description": "Export system data from the prometheus node_exporter every day",
                        "customLog": "Prometheus_OSExporter",
                        "frequencySecs": 86400,
                        "actions": [
                            {
                                "type": "FetchMetrics",
                                "parameters": {
                                    "includePrefixes": "^(node_cooling_device_cur_state)|(node_uname_info)",
                                    "suppressIfZeroPrefixes": "node_(?:systemd_unit_state)"
                                }
                            }
                        ]
                }
        ]
}
